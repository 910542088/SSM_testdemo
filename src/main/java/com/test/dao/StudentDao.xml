<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.StudentDao">

    <update id="update">
        update student set name=#{name},age=#{age} where id= #{id}
    </update>

    <insert id="add">
        insert into student values (#{id},#{name},#{age})
    </insert>

    <select id="showAll" resultType="com.test.domain.Student">
        select * from Student
  </select>

    <delete id="delete">
        delete from student where id in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="edit" resultType="com.test.domain.Student">
        select * from Student where id=#{id}
    </select>

    <select id="one" resultType="com.test.domain.Student">
        select * from Student
        <where>
            <if test="name!=''">
                name=#{name}
            </if>
            <if test="age!=null">
                and age=#{age}
            </if>
        </where>
    </select>
    <select id="limit" resultType="com.test.domain.Student">
        select * from Student
        <where>
            <if test="name!=''">
                name=#{name}
            </if>
            <if test="age!=null">
                and age=#{age}
            </if>
        </where>
                limit #{i},#{pageSize}
    </select>


</mapper>